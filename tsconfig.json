{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "../node_modules/*",
    "./main.client-aot.ts",
    "./main.client-closure.ts",
    "./main.server-aot.ts"
  ],
  "files": [
    "src/app/app.server.module.ts",
    "src/main.server.ts",
    "src/main.client.ts"
  ]
}
