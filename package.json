{
  "name": "angular-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "Vladimir Djukic",
  "license": "ISC",
  "scripts": {
    "cleanup": "rimraf aot built src/**/*ng* src/**/**/*ng* src/*.js src/*.js.map src/**/*.js src/**/*.js.map src/**/**/*.js src/**/**/*.js.map",
    "build:server": "ngc -p tsconfig-server-aot.json && webpack --config=webpack/webpack-server-aot.config.js",
    "build:client": "ngc -p tsconfig-client-aot.json && webpack -p --config=webpack/webpack-client-aot.config.js",
    "build:prod": "rimraf dist && npm run build:server && npm run build:client && npm run cleanup",
    "build:closure": "rimraf dist && npm run build:server && npm run build:client:closure && npm run cleanup && npm run closure:deps",
    "closure:deps": "cp src/closure.html dist/index.html && cp -rf src/assets dist/assets && cp node_modules/zone.js/dist/zone.min.js dist/zone.min.js",
    "build:client:closure": "ngc -p tsconfig-closure.json && npm run closure",
    "closure": "java -jar node_modules/google-closure-compiler/compiler.jar --flagfile closure.conf",
    "serve:build": "npm run build:server && npm run build:client && nodemon  ./dist/server.js",
    "watch": "rimraf dist && parallel-webpack --watch --config=webpack/webpack.config.js",
    "serve": "cd dist && nodemon server.js",
    "test": "rimraf dist && karma start karma.conf.js",
    "pretest": "npm run lint",
    "lint": "tslint -c webpack/tslint.json \"src/app/**/*.ts\""
  },
  "dependencies": {
    "@angular/animations": "^4.4.6",
    "@angular/common": "^4.4.6",
    "@angular/compiler": "^4.4.6",
    "@angular/compiler-cli": "^4.4.6",
    "@angular/core": "^4.4.6",
    "@angular/http": "^4.4.6",
    "@angular/platform-browser": "^4.4.6",
    "@angular/platform-browser-dynamic": "^4.4.6",
    "@angular/platform-server": "^4.4.6",
    "@angular/router": "^4.4.6",
    "@ngrx/core": "^1.2.0",
    "@ngrx/effects": "^4.1.0",
    "@ngrx/store": "^4.1.0",
    "@ngrx/store-devtools": "^4.0.0",
    "@nguniversal/express-engine": "^1.0.0-beta.2",
    "@ngx-universal/express-engine": "^0.4.0-beta.1",
    "codelyzer": "^4.0.1",
    "compression": "^1.6.2",
    "core-js": "^2.4.1",
    "debug": "^2.6.4",
    "express": "^4.15.2",
    "ngx-bootstrap": "^1.6.6",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.10",
    "rxjs": "5.4.x"
  },
  "devDependencies": {
    "@types/compression": "0.0.33",
    "@types/express": "^4.0.35",
