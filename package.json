{
  "name": "angular-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "cleanup": "rimraf aot built src/**/*ng* src/**/**/*ng* src/*.js src/*.js.map src/**/*.js src/**/*.js.map src/**/**/*.js src/**/**/*.js.map",
    "build:server": "ngc -p tsconfig-server-aot.json && webpack --config=webpack/webpack-server-aot.config.js",
    "build:client": "ngc -p tsconfig-client-aot.json && webpack -p --config=webpack/webpack-client-aot.config.js",
    "build:prod": "rimraf dist && npm run build:server && npm run build:client && npm run cleanup",
    "build:closure": "rimraf dist && npm run build:server && npm run build:client:closure && npm run cleanup && npm run closure:deps",
    "closure:deps": "cp src/closure.html dist/index.html && cp -rf src/assets dist/assets && cp node_modules/zone.js/dist/zone.min.js dist/zone.min.js",
    "build:client:closure": "ngc -p tsconfig-closure.json && npm run closure",
    "closure": "java -jar node_modules/google-closure-compiler/compiler.jar --flagfile closure.conf",
    "serve:build": "npm run build:server && npm run build:client && nodemon  ./dist/server.js",
    "watch": "rimraf dist && webpack --watch --config=webpack/webpack.config.js",
    "serve": "cd dist && nodemon server.js"
  },
  "devDependencies": {
    "@angular/common": "^4.0.3",
    "@angular/compiler": "^4.0.3",
    "@angular/compiler-cli": "^4.0.3",
    "@angular/core": "^4.0.3",
    "@angular/http": "^4.0.3",
    "@angular/platform-browser": "^4.0.3",
    "@angular/platform-browser-dynamic": "~4.0.3",
    "@angular/platform-server": "^4.0.3",
    "@angular/tsc-wrapped": "^4.0.3",
    "@angularclass/bootloader": "^1.0.1",
    "@types/express": "^4.0.35",
    "@types/jasmine": "^2.5.47",
    "@types/node": "^8.0.1",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.3",
    "body-parser": "^1.17.1",
    "clang-format": "^1.0.49",
    "concurrently": "3.1.0",
    "copy-webpack-plugin": "^4.0.1",
    "google-closure-compiler": "20170409.0.0",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "lite-server": "2.2.2",
    "morgan": "^1.8.1",
    "nodemon": "^1.11.0",
    "protractor": "^5.1.1",
    "raw-loader": "^0.5.1",
    "rxjs": "5.3.1",
    "source-map-explorer": "^1.3.3",
    "ts-loader": "^2.0.3",
    "tsickle": "^0.2.3",
    "typescript": "~2.2.0",
    "typings": "^2.1.1",
    "webpack": "2.2.1",
    "webpack-dev-server": "2.4.1",
    "webpack-merge": "^3.0.0",
    "webpack-node-externals": "^1.6.0",
    "webpack-notifier": "^1.5.0",
    "zone.js": "^0.8.6"
